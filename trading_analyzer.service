[Unit]
Description=蔡森技术分析交易信号服务
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/Desktop/Rich
ExecStart=/usr/bin/python3 /home/admin/Desktop/Rich/trading_analyzer_service.py
Restart=always
RestartSec=10
StandardOutput=append:/home/admin/Desktop/Rich/trading_analyzer.log
StandardError=append:/home/admin/Desktop/Rich/trading_analyzer_error.log

# 环境变量
Environment="PYTHONUNBUFFERED=1"

# 资源限制
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
